@model IEnumerable<SahasBanking.Models.Loan.LoanModel>
<style>

    table {
        background-color: aliceblue;
        width: 100%;
        border-collapse: collapse;
        table-layout: fixed;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
        word-wrap: break-word;
    }

    th {
        background-color: #000336;
        color: black;
    }


    h2 {
        font-family: Arial, sans-serif;
        color: #333;
    }


    .amount-column {
        width: 150px;
        text-align: center;
    }

    .username-column {
        width: 150px;
        text-align: center;
    }

    .table {
        position: absolute;
        left: 30%;
        width: 40%;
    }

    .action-column {
        text-align: center;
    }

    .table th {
        background-color: #000336;
        color: white;
        text-transform: uppercase;
        font-size: 14px;
    }

    .approve {
        color: white;
        background-color: green;
        border: 1px solid green;
        padding: 5px 10px;
        border-radius: 4px;
        text-decoration: none;
        font-size: 14px;
        font-family: Arial, sans-serif;
        transition: background-color 0.3s ease;
    }

        .approve:hover {
            background-color: #005500;
        }

    .reject {
        color: white;
        background-color: red;
        border: 1px solid red;
        padding: 5px 10px;
        border-radius: 4px;
        text-decoration: none;
        font-size: 14px;
        font-family: Arial, sans-serif;
        transition: background-color 0.3s ease;
    }

        .reject:hover {
            background-color: #a10000;
        }


    .link-spacing {
        margin-right: 10px; /* Space between links */
    }

</style>


<table class="table">
    <tr>
        <th class="username-column">User</th>
        <th class="amount-column">Amount</th>
        <th class="action-column">Action</th>
    </tr>
    @foreach (var loan in Model)
    {
        <tr>
            <td class="username-column">@loan.UserName</td>
            <td class="amount-column">@loan.Amount</td>
            <td class="action-column">

                <a asp-controller="Loan" asp-action="Approve" asp-route-username="@loan.UserName" class="approve">Approve</a> |
                <a asp-controller="Loan" asp-action="Reject" asp-route-username="@loan.UserName" class="reject">Reject</a>

            </td>
        </tr>
    }
</table>